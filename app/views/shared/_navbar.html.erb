 <div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand d-flex align-items-center" do %>
    <%= image_tag "https://res.cloudinary.com/df0stqosw/image/upload/v1615535377/Bonvan/bonvan-logo.png_bgxum5.png", class: "avatar"%>
  <h2 class="bonvan" >Bonvan</h2>
  <% end %>


  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
    <% if user_signed_in? %>
      <li class="dropdown">
        <button class="btn-navbar" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <%= current_user.first_name.capitalize %>
        </button>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
          <%= link_to "Ajouter un van", new_van_path, class: "dropdown-item" %>
          <%= link_to "Voir mes réservations", bookings_path, class: "dropdown-item" %>
          <%= link_to "Se déconnecter", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
        </div>
      </li>
    <% else  %>
      <li class="nav-item active">
        <%= link_to "Se connecter", new_user_session_path, class: "nav-link btn-navbar", id: "login-btn"%>
      </li>
    <%  end %>
    </ul>
  </div>
</div>

